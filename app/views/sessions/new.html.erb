<% provide(:title, 'Login') %>

<div class="container">
  <div class="row">
      <h1 id="sign-in-heading" class="center-align">Sign In</h1>
  </div>

  <%= form_for(:session, url: login_path) do |f| %>
      <div class="row">
        <div class="input-field col s12 m8 push-m2 l6 push-l3">
          <%= f.text_field :email, class: 'validate' %>
          <%= f.label :email, for: 'sessions_email' %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12 m8 push-m2 l6 push-l3">
          <%= f.password_field :password, required: true, class: 'validate' %>
          <%= f.label :password, for: 'sessions_password' %>
        </div>
      </div>

      <div class="row">
        <div class="col s12 m8 push-m2 l6 push-l3">
          <%= f.check_box :remember_me, id: 'remember_me_checkbox' %>
          <%= f.label :remember_me, 'Remember me on this PC', for: 'remember_me_checkbox' %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12 m8 push-m2 l6 push-l3">
          <%= button_tag(type: 'submit', class: 'btn waves-effect waves-light') do %>
              <i class="material-icons right">send</i>Sign In
          <% end %>
        </div>
      </div>
  <% end %>
  <div class="container flash-messages">
    <div class="row">
      <div class="container ">
        <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>">
              <%= message %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>